<div class="col-xl-3 col-lg-4 col-md-6 col-12">
    <div class="card bg-light mb-3">
        <img class="img-responsive" src="{{src}}">
        <div class="card-body">
            <h4 class="card-title">{{name}}</h4>
            <p class="card-text">{{description}}</p>
            <div class="btn-group mx-2" role="group">
                <button type="button" class="btn btn-secondary" disabled>{{formatPrice price}}</button>
                <button type="button" class="btn btn-secondary btn-outline-secondary" onclick="{{addToShoppingCart_onclick}}(event, '{{_id}}')">Add to cart</button>
            </div>
        </div>
    </div>
</div>