{{> navbar-partial user = 'user'}}
{{> jumbotron-partial}}
<main>
    <div class="container col-8 col-xl-6 bg-light border rounded" >

        <h3 class="text-secondary">Order</h3>

        <div class="input-group mb-3 border rounded bg-secondary">
            <div class="input-group-prepend text-white col-4">
                <span class="input-group-text align-middle">Number</span>
            </div>
            <span class="form-control" id="Name">{{order._id}}</span>
        </div>

        <div class="input-group mb-3 border rounded bg-secondary">
            <div class="input-group-prepend text-white col-4">
                <span class="input-group-text align-middle">Date</span>
            </div>
            <span class="form-control" id="Surname">{{formatDate order.date}}</span>
        </div>

        <div class="input-group mb-3 border rounded bg-secondary">
            <div class="input-group-prepend  text-white col-4">
                <span class="input-group-text align-middle">Address</span>
            </div>
            <span class="form-control " id="Birth_Date">{{order.address}}</span>
        </div>

        <div class="input-group mb-3 border rounded bg-secondary">
            <div class="input-group-prepend text-white col-4">
                <span class="input-group-text align-middle">Card Holder</span>
            </div>
            <span class="form-control " id="Address">{{order.card_holder}}</span>
        </div>

        <div class="input-group mb-3 border rounded bg-secondary align-text-center">
            <div class="input-group-prepend text-white col-4 ">
                <span class="input-group-text align-middle">Card Number</span>
            </div>
            <span class="form-control " id="Email">{{order.card_number}}</span>
        </div>
    </div>

    <br>
    <div class="container col-8 col-xl-6 bg-light border rounded">

        <h3 class="text-secondary">Products</h3>
        <table class="table">
            <thead class="bg-secondary text-white">
                <tr>
                    <th scope="col">Number</th>
                    <th scope="col">Qty</th>
                    <th scope="col">Product</th>
                    <th scope="col">Price</th>
                    <th scope="col">Total</th>
                </tr>
                </thead>
                <tbody>
                {{#each order.items}}
                    {{> order-partial}}
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <br>

    <div class="container col-8 col-xl-6 bg-light border rounded" >
        <br>
        <div class="input-group mb-3 border rounded bg-secondary">
            <div class="input-group-prepend text-white col-4">
                <span class="input-group-text align-middle">Subtotal</span>
            </div>
            <span class="form-control" id="Name">{{formatPrice order.subtotal}}</span>
        </div>

        <div class="input-group mb-3 border rounded bg-secondary">
            <div class="input-group-prepend text-white col-4">
                <span class="input-group-text align-middle">Tax</span>
            </div>
            <span class="form-control" id="Surname">{{order.tax}}</span>
        </div>

        <div class="input-group mb-3 border rounded bg-secondary">
            <div class="input-group-prepend  text-white col-4">
                <span class="input-group-text align-middle">Total</span>
            </div>
            <span class="form-control " id="Birth_Date">{{formatPrice order.total}}</span>
        </div>

    </div>
</main>
<br><br><br><br>
{{> footer-partial}}
